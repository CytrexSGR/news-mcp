# Analysis Worker Environment Configuration

# Database Configuration (from main .env)
DATABASE_URL=postgresql://news_user:news_password@localhost:5432/news_db

# OpenAI API Configuration (from main .env)
OPENAI_API_KEY=your-openai-api-key-here

# Worker Configuration
WORKER_CHUNK_SIZE=10
WORKER_SLEEP_INTERVAL=5.0
WORKER_HEARTBEAT_INTERVAL=10.0
WORKER_STALE_PROCESSING_SEC=300
WORKER_MIN_REQUEST_INTERVAL=0.5
WORKER_MAX_RUNS_PER_CYCLE=5
WORKER_RESET_STALE_ON_START=true

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=/var/log/news-analysis-worker.log

# Service Configuration
WORKER_NAME=news-analysis-worker
WORKER_USER=cytrex
WORKER_GROUP=cytrex
WORKER_WORK_DIR=/home/cytrex/news-mcp