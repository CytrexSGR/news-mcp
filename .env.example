# News MCP Configuration
# Copy this file to .env and adjust values as needed

# Database Configuration
# PostgreSQL (local development and production):
# Replace with your actual database credentials
DATABASE_URL=postgresql://your_db_user:your_db_password@localhost:5432/your_db_name

# API Server Configuration
API_HOST=0.0.0.0
API_PORT=8000
LOG_LEVEL=INFO

# Feed Fetcher Configuration
FETCH_INTERVAL_MINUTES=15
MAX_CONCURRENT_FETCHES=10
FETCH_TIMEOUT_SECONDS=30

# Dynamic Scheduler Configuration
SCHEDULER_INSTANCE_ID=dynamic_scheduler
CONFIG_CHECK_INTERVAL_SECONDS=30
MAX_FEED_FAILURES=5
HEARTBEAT_INTERVAL_SECONDS=60

# Content Processing Configuration
MAX_TITLE_LENGTH=200
MIN_TITLE_LENGTH=5
DEFAULT_FETCH_INTERVAL_MINUTES=60

# Template System Configuration
ENABLE_AUTO_TEMPLATE_ASSIGNMENT=true
TEMPLATE_CACHE_TTL_SECONDS=300

# MCP Server Configuration
MCP_SERVER_NAME=news-mcp
MCP_SERVER_VERSION=1.0.0
MCP_PORT=8001

# Security Configuration (optional)
CORS_ORIGINS=["*"]
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=["*"]
CORS_ALLOW_HEADERS=["*"]

# Logging Configuration
LOG_FILE_PATH=/tmp/news-mcp.log
LOG_FILE_MAX_SIZE_MB=10
LOG_FILE_BACKUP_COUNT=5

# Performance Tuning
SQLALCHEMY_ECHO=false
SQLALCHEMY_POOL_SIZE=5
SQLALCHEMY_MAX_OVERFLOW=10

# Development Configuration
DEBUG=false
RELOAD=false

# LLM API Configuration
OPENAI_API_KEY=your_openai_api_key_here
ANALYSIS_MODEL=gpt-4o-mini
ANALYSIS_BATCH_LIMIT=200
ANALYSIS_RPS=1.0

# Analysis Run Manager Configuration
# Maximum number of concurrent analysis runs
# Increase for more parallel processing (default: 5)
MAX_CONCURRENT_RUNS=5

# Daily limits
MAX_DAILY_RUNS=100        # Manual analysis runs per day
MAX_DAILY_AUTO_RUNS=500   # Auto-analysis runs per day

# Hourly limit for all runs
MAX_HOURLY_RUNS=10

# Auto-Analysis specific settings
# Rate limit for OpenAI API calls (requests per second)
AUTO_ANALYSIS_RATE_PER_SECOND=3.0