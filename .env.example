# News MCP Configuration
# Copy this file to .env and adjust values as needed

# Database Configuration
DATABASE_URL=sqlite:///./news.db
# For production, use PostgreSQL:
# DATABASE_URL=postgresql://user:password@localhost/newsdb

# API Server Configuration
API_HOST=0.0.0.0
API_PORT=8000
LOG_LEVEL=INFO

# Feed Fetcher Configuration
FETCH_INTERVAL_MINUTES=60
MAX_CONCURRENT_FETCHES=5
FETCH_TIMEOUT_SECONDS=30

# Dynamic Scheduler Configuration
SCHEDULER_INSTANCE_ID=dynamic_scheduler
CONFIG_CHECK_INTERVAL_SECONDS=30
MAX_FEED_FAILURES=5
HEARTBEAT_INTERVAL_SECONDS=60

# Content Processing Configuration
MAX_TITLE_LENGTH=200
MIN_TITLE_LENGTH=5
DEFAULT_FETCH_INTERVAL_MINUTES=60

# Template System Configuration
ENABLE_AUTO_TEMPLATE_ASSIGNMENT=true
TEMPLATE_CACHE_TTL_SECONDS=300

# MCP Server Configuration
MCP_SERVER_NAME=news-mcp
MCP_SERVER_VERSION=1.0.0
MCP_PORT=8001

# Security Configuration (optional)
CORS_ORIGINS=["*"]
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=["*"]
CORS_ALLOW_HEADERS=["*"]

# Logging Configuration
LOG_FILE_PATH=/tmp/news-mcp.log
LOG_FILE_MAX_SIZE_MB=10
LOG_FILE_BACKUP_COUNT=5

# Performance Tuning
SQLALCHEMY_ECHO=false
SQLALCHEMY_POOL_SIZE=5
SQLALCHEMY_MAX_OVERFLOW=10

# Development Configuration
DEBUG=false
RELOAD=false